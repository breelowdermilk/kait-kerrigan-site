---
import Layout from '~/layouts/PageLayout.astro';
---

<Layout>
  <style is:inline>
    /* Hero section - white background with centered photo */
    .hero-container {
      background-color: #ffffff;
      min-height: 88vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }
    .hero-image {
      max-height: 85vh;
      width: auto;
      max-width: 55%;
      object-fit: contain;
      margin-left: 15%;
    }
    /* Text content positioned on left, raised high */
    .hero-content {
      position: absolute;
      top: 25%;
      left: 6%;
      z-index: 10;
    }
    .hero-title {
      font-family: 'Cormorant Garamond', Georgia, serif;
      font-size: 3.2rem;
      font-weight: 400;
      color: #c9a227; /* Gold */
      margin-bottom: 0.4rem;
      line-height: 1.1;
    }
    .hero-subtitle {
      font-size: 1rem;
      color: #3d3632; /* Warm charcoal */
      margin-bottom: 1.25rem;
      letter-spacing: 0.03em;
    }
    .hero-buttons {
      display: flex;
      gap: 0.75rem;
    }
    .hero-btn {
      display: inline-block;
      padding: 0.5rem 1.25rem;
      background: transparent;
      color: #3d3632;
      font-weight: 600;
      text-decoration: none;
      border: 2px solid #3d3632;
      border-radius: 3px;
      transition: all 0.2s ease;
      font-size: 0.85rem;
    }
    .hero-btn:hover {
      background: #c9a227;
      border-color: #c9a227;
      color: #ffffff;
    }
    @media (max-width: 768px) {
      .hero-title { font-size: 2.2rem; }
      .hero-image {
        max-width: 90%;
        margin-left: 0;
      }
      .hero-content {
        position: relative;
        top: auto;
        left: auto;
        text-align: center;
        padding: 1.5rem;
      }
      .hero-buttons { justify-content: center; }
      .hero-container {
        flex-direction: column;
        min-height: auto;
        padding: 2rem 0;
      }
    }
  </style>

  <section class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">Kait Kerrigan</h1>
      <p class="hero-subtitle">Bookwriter • Lyricist • Playwright</p>
      <div class="hero-buttons">
        <a href="/about" class="hero-btn">About</a>
        <a href="/shows" class="hero-btn">Shows</a>
      </div>
    </div>
    <img src="/images/kait-hero.jpg" alt="Kait Kerrigan" class="hero-image" />
  </section>
</Layout>
