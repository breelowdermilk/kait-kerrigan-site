---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contact',
  description: 'Get in touch with Bree Lowdermilk for professional inquiries, collaborations, and general contact.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="py-16 text-center">
    <h1 class="bree-h1-small">CONTACT</h1>
  </section>

  <!-- Main Content -->
  <section class="px-4 py-16 mx-auto max-w-6xl lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      
      <!-- Left Column - Professional Contact -->
      <div class="space-y-8">
        <div>
          <h2 class="text-2xl font-bold mb-6 tracking-wide">THEATRICAL INQUIRIES</h2>
          <div class="space-y-3">
            <a href="mailto:sglewen@gersh.com" 
               class="inline-block px-4 py-3 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
              SETH GLEWEN | GERSH AGENCY
            </a>
          </div>
        </div>

        <div>
          <h2 class="text-2xl font-bold mb-6 tracking-wide">FILM/TV INQUIRIES</h2>
          <div class="space-y-3">
            <a href="mailto:lkeele.asst@gershla.com" 
               class="inline-block px-4 py-3 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
              LEE KEELE | GERSH AGENCY
            </a>
          </div>
        </div>

        <div>
          <h2 class="text-2xl font-bold mb-6 tracking-wide">JABBERWOCKY</h2>
          <div class="space-y-3">
            <a href="mailto:jordan@awfulagent.com" 
               class="inline-block px-4 py-3 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
              JORDAN HAMESSLEY | JABBERWOCKY
            </a>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form -->
      <div>
        <h2 class="text-2xl font-bold mb-6 tracking-wide">CONTACT BREE</h2>
        <form class="space-y-6" method="POST" action="#" netlify>
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              NAME
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent"
            >
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              EMAIL
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent"
            >
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              SUBJECT
            </label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent"
            >
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              MESSAGE
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="6" 
              required
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent resize-none"
            ></textarea>
          </div>

          <button 
            type="submit"
            class="w-full px-6 py-4 bg-gray-900 text-white font-medium tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
            SEND MESSAGE
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Links Section -->
  <section class="px-4 pb-16 mx-auto max-w-4xl lg:px-8">
    <div class="grid md:grid-cols-2 gap-8 text-center">
      <div class="p-6">
        <h3 class="text-lg font-semibold mb-2 tracking-wide">SHEET MUSIC</h3>
        <a href="https://newmusicaltheatre.com" target="_blank" rel="noopener noreferrer" 
           class="inline-block px-4 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
          NEWMUSICALTHEATRE.COM
        </a>
      </div>

      <div class="p-6">
        <h3 class="text-lg font-semibold mb-2 tracking-wide">FOLLOW ALONG</h3>
        <a href="https://twitter.com/breelowdermilk" target="_blank" rel="noopener noreferrer" 
           class="inline-block px-4 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
          @BREELOWDERMILK
        </a>
      </div>
    </div>
  </section>
</Layout>