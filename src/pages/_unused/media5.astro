---
import Layout from '~/layouts/PageLayout.astro';
import { youtubePerformances, spotifyAlbums } from '~/data/media/youtube-performances.js';

const metadata = {
  title: 'Media | Bree Lowdermilk',
  description: 'Listen to Kerrigan-Lowdermilk music',
};

// Sample Spotify track data with real IDs
const spotifyTracks = {
  'Run Away With Me': { id: '5n8Aro6j1bEGIy7Tpo7FV7', album: 'The Mad Ones' },
  'Freedom': { id: '0VgkVdmE4gld66l8iyGjgx', album: 'The Mad Ones' },
  'Say the Word': { id: '3Kkjo3cT83cw09VJyrLNwZ', album: 'Our First Mistake' },
  'When It Happens to You': { id: '3eGKL2Lh6SWjBScP2HLUNa', album: 'Our First Mistake' },
  'Holding On': { id: '6xJ7V8tkoJNgzY8YtWFPD9', album: 'Kerrigan-Lowdermilk Live' },
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 mx-auto max-w-7xl">
    <h1 class="text-5xl font-bold mb-12 text-center bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
      Music & Media
    </h1>

    <!-- Option 1: Minimalist Spotify Cards -->
    <div class="mb-20">
      <h2 class="text-2xl font-bold mb-8 flex items-center gap-3">
        <span class="w-8 h-1 bg-green-500 rounded-full"></span>
        Featured on Spotify
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {Object.entries(spotifyTracks).slice(0, 3).map(([title, track]) => (
          <div class="group relative">
            <!-- Custom Card Design -->
            <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl p-6 shadow-2xl hover:shadow-green-500/20 transition-all duration-500 hover:-translate-y-1">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-white font-bold text-lg mb-1">{title}</h3>
                  <p class="text-gray-400 text-sm">{track.album}</p>
                </div>
                <a 
                  href={`https://open.spotify.com/track/${track.id}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center hover:bg-green-400 transition-colors"
                  aria-label="Open in Spotify"
                >
                  <svg class="w-6 h-6 text-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                  </svg>
                </a>
              </div>
              
              <!-- Mini Player -->
              <div class="bg-black/30 rounded-lg p-3">
                <div class="flex items-center gap-3">
                  <button class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center hover:scale-110 transition-transform">
                    <svg class="w-4 h-4 text-black ml-0.5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </button>
                  <div class="flex-1">
                    <div class="h-1 bg-gray-700 rounded-full overflow-hidden">
                      <div class="h-full w-1/3 bg-green-500 rounded-full"></div>
                    </div>
                  </div>
                  <span class="text-gray-400 text-xs">0:30</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Option 2: Clean Link Buttons (No iframes) -->
    <div class="mb-20">
      <h2 class="text-2xl font-bold mb-8">Quick Links</h2>
      
      <div class="flex flex-wrap gap-4">
        {spotifyAlbums.map((album) => (
          <a
            href={album.spotifyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-3 px-6 py-3 bg-white dark:bg-gray-800 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-0.5 border border-gray-200 dark:border-gray-700"
          >
            <div class="w-10 h-10 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
