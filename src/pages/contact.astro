---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contact',
  description: 'Get in touch with Bree Lowdermilk for professional inquiries, collaborations, and general contact.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="py-16 text-center">
    <h1 class="bree-h1-small">CONTACT</h1>
  </section>

  <!-- Main Content -->
  <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      
      <!-- Left Column - Professional Contact & Form -->
      <div class="space-y-8">
        <!-- Professional Inquiries Section - Two Column Layout -->
        <div class="space-y-6">
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center">
              <h2 class="text-lg font-bold mb-3 tracking-wide">THEATRICAL</h2>
              <a href="mailto:sglewen@gersh.com" 
                 class="inline-block px-3 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
                SETH GLEWEN | GERSH
              </a>
            </div>

            <div class="text-center">
              <h2 class="text-lg font-bold mb-3 tracking-wide">FILM/TV</h2>
              <a href="mailto:lkeele.asst@gershla.com" 
                 class="inline-block px-3 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
                LEE KEELE | GERSH
              </a>
            </div>
          </div>

          <div class="text-center">
            <h2 class="text-lg font-bold mb-3 tracking-wide">LITERARY</h2>
            <a href="mailto:jordan@awfulagent.com" 
               class="inline-block px-3 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
              JORDAN HAMESSLEY | JABBERWOCKY
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-xl font-bold mb-6 tracking-wide">CONTACT BREE</h2>
          <form class="space-y-6" method="POST" action="#" netlify>
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                NAME
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent"
              >
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                EMAIL
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent"
              >
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                SUBJECT
              </label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent"
              >
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                MESSAGE
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-gray-500 focus:border-transparent resize-none"
              ></textarea>
            </div>

            <button 
              type="submit"
              class="inline-block px-8 py-4 bg-gray-900 text-white font-medium tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
              SEND MESSAGE
            </button>
          </form>
        </div>
      </div>

      <!-- Right Column - Photo -->
      <div class="lg:sticky lg:top-6">
        <div class="p-8 overflow-hidden">
          <img 
            src="/images/bree-accordion.png" 
            alt="Bree Lowdermilk with accordion"
            class="w-full object-contain"
            style="margin-top: -5%; transform: translateY(-15%);"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Links Section -->
  <section class="px-4 pb-16 mx-auto max-w-6xl lg:px-8">
    <div class="grid md:grid-cols-2 gap-8 text-center">
      <div class="p-6">
        <h3 class="text-lg font-semibold mb-4 tracking-wide">SHEET MUSIC</h3>
        <div class="space-y-3 flex flex-col items-center">
          <a href="https://newmusicaltheatre.com" target="_blank" rel="noopener noreferrer" 
             class="inline-block px-6 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
            NEWMUSICALTHEATRE.COM
          </a>
          <a href="https://musicnotes.com" target="_blank" rel="noopener noreferrer" 
             class="inline-block px-6 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
            MUSIC NOTES
          </a>
        </div>
      </div>

      <div class="p-6">
        <h3 class="text-lg font-semibold mb-4 tracking-wide">FOLLOW ALONG</h3>
        <a href="https://instagram.com/breelowdermilk" target="_blank" rel="noopener noreferrer" 
           class="inline-block px-6 py-2 bg-gray-900 text-white font-medium text-xs tracking-widest hover:shadow-lg hover:shadow-gray-500/30 transition-shadow duration-300">
          @BREELOWDERMILK
        </a>
      </div>
    </div>
  </section>
</Layout>