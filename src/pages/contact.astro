---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contact',
  description: 'Get in touch with Kait Kerrigan for professional inquiries, collaborations, and general contact.',
};
---

<Layout metadata={metadata}>
  <style is:inline>
    .contact-btn {
      display: inline-block;
      padding: 0.5rem 1.25rem;
      background: transparent;
      color: #3d3632;
      font-weight: 600;
      text-decoration: none;
      border: 2px solid #3d3632;
      border-radius: 3px;
      transition: all 0.2s ease;
      font-size: 0.85rem;
      letter-spacing: 0.05em;
    }
    .contact-btn:hover {
      background: #c9a227;
      border-color: #c9a227;
      color: #ffffff;
    }
  </style>

  <!-- Hero Section -->
  <section class="py-16 text-center">
    <h1 class="bree-h1-small">CONTACT</h1>
  </section>

  <!-- Main Content -->
  <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8">
    <div class="max-w-xl mx-auto">

      <!-- Left Column - Professional Contact & Form -->
      <div class="space-y-8">
        <!-- Professional Inquiries Section - Two Column Layout -->
        <div class="space-y-6">
          <div class="grid grid-cols-2 gap-6">
            <div class="text-center">
              <h2 class="text-lg font-bold mb-3 tracking-wide">THEATRICAL</h2>
              <a href="mailto:sglewen@gersh.com" class="contact-btn">
                SETH GLEWEN | GERSH
              </a>
            </div>

            <div class="text-center">
              <h2 class="text-lg font-bold mb-3 tracking-wide">FILM/TV</h2>
              <a href="mailto:lkeele.asst@gershla.com" class="contact-btn">
                LEE KEELE | GERSH
              </a>
            </div>
          </div>

        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-xl font-bold mb-6 tracking-wide">CONTACT KAIT</h2>
          <form class="space-y-6" method="POST" action="#" netlify>
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                NAME
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border-2 border-gray-400 bg-white text-gray-900 rounded focus:ring-2 focus:ring-amber-500 focus:border-amber-500"
              >
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                EMAIL
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border-2 border-gray-400 bg-white text-gray-900 rounded focus:ring-2 focus:ring-amber-500 focus:border-amber-500"
              >
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                SUBJECT
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border-2 border-gray-400 bg-white text-gray-900 rounded focus:ring-2 focus:ring-amber-500 focus:border-amber-500"
              >
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                MESSAGE
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 border-2 border-gray-400 bg-white text-gray-900 rounded focus:ring-2 focus:ring-amber-500 focus:border-amber-500 resize-none"
              ></textarea>
            </div>

            <button type="submit" class="contact-btn">
              SEND MESSAGE
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Links Section -->
  <section class="px-4 pb-16 mx-auto max-w-6xl lg:px-8">
    <div class="grid md:grid-cols-2 gap-8 text-center">
      <div class="p-6">
        <h3 class="text-lg font-semibold mb-4 tracking-wide">SHEET MUSIC</h3>
        <div class="space-y-3 flex flex-col items-center">
          <a href="https://newmusicaltheatre.com" target="_blank" rel="noopener noreferrer" class="contact-btn">
            NEWMUSICALTHEATRE.COM
          </a>
          <a href="https://musicnotes.com" target="_blank" rel="noopener noreferrer" class="contact-btn">
            MUSIC NOTES
          </a>
        </div>
      </div>

      <div class="p-6">
        <h3 class="text-lg font-semibold mb-4 tracking-wide">FOLLOW ALONG</h3>
        <a href="https://instagram.com/kaitkerrigan" target="_blank" rel="noopener noreferrer" class="contact-btn">
          @KAITKERRIGAN
        </a>
      </div>
    </div>
  </section>
</Layout>