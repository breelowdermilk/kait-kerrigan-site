---
export interface Props {
  title: string;
  description?: string;
  artist?: string;
  category?: string;
  duration?: string;
  position?: 'top' | 'bottom' | 'left' | 'right';
  className?: string;
}

const { 
  title, 
  description, 
  artist, 
  category, 
  duration, 
  position = 'top',
  className = ''
} = Astro.props;

// Position classes for tooltip
const positionClasses = {
  top: 'bottom-full left-1/2 transform -translate-x-1/2 mb-2',
  bottom: 'top-full left-1/2 transform -translate-x-1/2 mt-2', 
  left: 'right-full top-1/2 transform -translate-y-1/2 mr-2',
  right: 'left-full top-1/2 transform -translate-y-1/2 ml-2'
};

// Arrow classes for tooltip
const arrowClasses = {
  top: 'top-full left-1/2 transform -translate-x-1/2 border-l-transparent border-r-transparent border-t-gray-900',
  bottom: 'bottom-full left-1/2 transform -translate-x-1/2 border-l-transparent border-r-transparent border-b-gray-900',
  left: 'left-full top-1/2 transform -translate-y-1/2 border-t-transparent border-b-transparent border-l-gray-900',
  right: 'right-full top-1/2 transform -translate-y-1/2 border-t-transparent border-b-transparent border-r-gray-900'
};
---

<div class={`media-tooltip absolute z-50 opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none ${positionClasses[position]} ${className}`}>
  <!-- Tooltip Content -->
  <div class="bg-gray-900 text-white text-sm rounded-lg px-3 py-2 max-w-xs shadow-xl backdrop-blur-sm">
    <!-- Category Badge (if provided) -->
    {category && (
      <div class="mb-1">
        <span class="inline-block bg-blue-500 text-white text-xs px-2 py-0.5 rounded-full uppercase tracking-wide">
          {category}
        </span>
      </div>
    )}
    
    <!-- Title -->
    <div class="font-semibold text-white mb-1">
      {title}
    </div>
    
    <!-- Artist -->
    {artist && (
      <div class="text-gray-300 text-xs mb-1">
        by {artist}
      </div>
    )}
    
    <!-- Description -->
    {description && (
      <div class="text-gray-400 text-xs leading-relaxed mb-1">
        {description}
      </div>
    )}
    
    <!-- Duration -->
    {duration && (
      <div class="text-gray-500 text-xs">
        {duration}
      </div>
    )}
    
    <!-- Click to play/watch hint -->
    <div class="text-blue-300 text-xs font-medium mt-2 border-t border-gray-700 pt-1">
      Click to play
    </div>
  </div>
  
  <!-- Tooltip Arrow -->
  <div class={`absolute w-0 h-0 border-4 ${arrowClasses[position]}`}></div>
</div>

<style>
  .media-tooltip {
    /* Ensure tooltip stays within viewport */
    max-width: min(300px, 90vw);
  }
  
  /* Animation for smooth appearance */
  .group:hover .media-tooltip {
    animation: tooltipFadeIn 0.3s ease-out;
  }
  
  @keyframes tooltipFadeIn {
    from {
      opacity: 0;
      transform: translateY(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Ensure tooltip is readable on all backgrounds */
  .media-tooltip .bg-gray-900 {
    background-color: rgba(17, 24, 39, 0.95);
    backdrop-filter: blur(8px);
  }
</style>